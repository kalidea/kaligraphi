{
  "name": "kaligraphi",
  "version": "0.0.3",
  "scripts": {
    "dev": "ng build @kalidea/kaligraphi --watch",
    "serve": "ng serve --open",
    "test": "ng test @kalidea/kaligraphi",
    "ng": "ng",
    "build": "ng build",
    "build:lib": "npm run build",
    "copy:styles": "cpx \"./projects/kalidea/kaligraphi/src/**/*.{sass,scss,css}\" ./dist/kalidea/kaligraphi",
    "compile:styles": "node-sass ./projects/kalidea/kaligraphi/src/styles/styles.sass ./dist/kalidea/kaligraphi/styles/styles.css",
    "postbuild": "npm run copy:styles && npm run compile:styles",
    "test:ci": "ng test @kalidea/kaligraphi --karma-config=./projects/kalidea/kaligraphi/karma.test.conf.js --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve:playground": "npm run serve",
    "build:playground": "ng build playground --prod",
    "build:all": "npm run build:lib && npm run build:playground",
    "verify": "ng lint @kalidea/kaligraphi && npm run test:ci && npm run build:all",
    "verify:windows": "ng lint @kalidea/kaligraphi && npm run build:all && npm run test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.1.2",
    "@angular/cdk": "^8.1.1",
    "@angular/common": "~8.1.2",
    "@angular/compiler": "~8.1.2",
    "@angular/core": "~8.1.2",
    "@angular/forms": "~8.1.2",
    "@angular/platform-browser": "~8.1.2",
    "@angular/platform-browser-dynamic": "~8.1.2",
    "@angular/router": "~8.1.2",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "lodash-es": "^4.17.15",
    "dayjs": "^1.8.17",
    "rxjs": "~6.5.2",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.2",
    "@angular-devkit/build-ng-packagr": "~0.801.2",
    "@angular/cli": "~8.1.2",
    "@angular/compiler-cli": "~8.1.2",
    "@angular/language-service": "~8.1.2",
    "@types/node": "~8.9.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "^5.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.4.3",
    "cpx": "^1.5.0",
    "ng-packagr": "^5.1.0",
    "node-sass": "^4.9.4",
    "scss-bundle": "^2.4.0",
    "tsickle": "^0.35.0",
    "tslib": "^1.9.0"
  }
}
