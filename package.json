{
  "name": "kaligraphi",
  "version": "0.0.1",
  "scripts": {
    "dev": "ng build --watch @kalidea/kaligraphi",
    "serve": "ng serve --open",
    "test": "ng test @kalidea/kaligraphi",
    "ng": "ng",
    "build": "ng build",
    "build:lib": "npm run build",
    "copy:styles": "cpx './projects/kalidea/kaligraphi/src/**/*.{sass,scss,css}' ./dist/kalidea/kaligraphi",
    "compile:styles": "node-sass ./projects/kalidea/kaligraphi/src/styles/styles.sass ./dist/kalidea/kaligraphi/styles/styles.css",
    "postbuild": "npm run copy:styles && npm run compile:styles",
    "test:ci": "ng test @kalidea/kaligraphi --karma-config=./projects/kalidea/kaligraphi/karma.test.conf.js --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve:playground": "npm run serve",
    "build:playground": "ng build playground --prod",
    "build:all": "npm run build:lib && npm run build:playground"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "lodash": "^4.17.11",
    "luxon": "^1.4.4",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular-devkit/build-ng-packagr": "~0.8.0",
    "@angular/cli": "~6.2.4",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/luxon": "^1.4.0",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "cpx": "^1.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.1.0",
    "node-sass": "^4.9.4",
    "protractor": "~5.4.0",
    "scss-bundle": "^2.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "tslint-jasmine-rules": "^1.5.1",
    "typescript": "~2.9.2"
  }
}
